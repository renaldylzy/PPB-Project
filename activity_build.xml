<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="Level :" android:id="@+id/selection_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Spinner android:id="@+id/spin_level" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:drawSelectorOnTop="true"
            android:layout_below="@+id/selection_level"/>
        <TextView android:text="Type :" android:id="@+id/selection_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spin_level"/>
        <Spinner android:id="@+id/spin_type" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:drawSelectorOnTop="true"
            android:layout_below="@+id/selection_type"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spin_type"
            android:layout_centerInParent="true"
            android:text="Search"
            android:id="@+id/btnGetSearched"
            android:onClick="getSearchItem"/>

        <TextView
            android:id="@+id/tvHasil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="222dp"
            android:text="Searched Vape : "
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult1"
            android:layout_below="@+id/tvHasil"
            android:text=""/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult2"
            android:layout_below="@id/tvResult1"
            android:text=""/>

    </RelativeLayout>
</LinearLayout>
